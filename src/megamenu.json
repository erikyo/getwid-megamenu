{
    "name": "megamenu/menu",
    "title": "Mega Menu",
    "category": "layout",
	"icon": "menu",
    "attributes": {
		"align": {
			"type": "string",
			"default": "center"
		},
		"menuAlign": {
			"type": "string",
			"default": "right"
		},
		"activator": {
			"type": "string",
			"default": "hover"
		},
		"menusMinWidth": {
			"type": "number",
			"default": 0
		},
        "dropdownMaxWidth": {
            "type": "number",
            "default": 0
        },
        "collapseOnMobile": {
            "type": "boolean",
            "default": true
        },
        "responsiveBreakpoint": {
            "type": "number",
            "default": 768
        }
    },
	"supports": {
		"align": true,
		"className": true,
		"color": {
			"gradients": true,
			"heading": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"reusable": false,
		"lightBlockWrapper": false
	}
}
