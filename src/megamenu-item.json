{
	"name": "megamenu/menu-item",
	"title": "Menu Item",
	"category": "layout",
	"icon": "link",
	"parent": [
		"megamenu/menu",
		"core/group",
		"core/navigation"
	],
	"attributes": {
		"url": {
			"type": "string",
			"default": ""
		},
        "id": {
            "type": "string"
        },
        "kind": {
            "type": "string"
        },
		"text": {
			"type": "string"
		},
		"linkTarget": {
			"type": "string"
		},
		"rel": {
			"type": "string"
		},
		"dropdownWrapperStyle": {
			"type": "string"
		},
		"parentAttributes": {
			"type": "Object",
			"default": {}
		},
		"showDropdown": {
			"type": "boolean"
		}
	},
	"supports": {
		"anchor": true,
		"className": false,
		"color": {
			"gradients": true,
			"heading": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"dimensions": {
			"minHeight": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontFamily": true,
			"__experimentalTextDecoration": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalWritingMode": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		},
		"__experimentalSelector": ".wp-block-megamenu-item"
	}
}
